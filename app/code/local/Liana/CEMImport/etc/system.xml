            <api_version translate="label comment">
                <label>API Version</label>
                <comment><![CDATA[API Version for LianaTech RESTful services]]></comment>
                <frontend_type>text</frontend_type>
                <sort_order>4</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>0</show_in_website>
                <show_in_store>1</show_in_store>
            </api_version>
            <api_realm translate="label comment">
                <label>API Realm</label>
                <comment><![CDATA[API Realm for LianaTech RESTful services]]></comment>
                <frontend_type>text</frontend_type>
                <sort_order>5</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>0</show_in_website>
                <show_in_store>1</show_in_store>
            </api_realm>
            <cem_channel translate="label comment">
                <label>CEM Channel</label>
                <comment><![CDATA[ID or name of the CEM channel in which to import. Defaults to 'ecs']]></comment>
                <frontend_type>text</frontend_type>
                <sort_order>6</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>0</show_in_website>
                <show_in_store>1</show_in_store>
            </cem_channel>
