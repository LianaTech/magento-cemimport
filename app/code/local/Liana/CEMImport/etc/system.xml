          <label>Liana CEM Import</label>
          <sort_order>150</sort_order>
      </cemimport>
  </tabs>   
  <sections>
    <cemimport translate="label">
      <label>CEM Import</label>
      <tab>cemimport</tab>
      <frontend_type>text</frontend_type>
      <sort_order>1000</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <settings translate="label">
          <label>CEMImport Settings</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <!-- New fields go here -->
            <api_user translate="label comment">
                <label>API User</label>
                <comment><![CDATA[API User for LianaTech RESTful services]]></comment>
                <frontend_type>text</frontend_type>
                <sort_order>1</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>0</show_in_website>
                <show_in_store>1</show_in_store>
            </api_user>
            <api_key translate="label comment">
                <label>API Key</label>
                <comment><![CDATA[API Key for LianaTech RESTful services]]></comment>
                <frontend_type>text</frontend_type>
                <sort_order>2</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>0</show_in_website>
                <show_in_store>1</show_in_store>
            </api_key>
            <api_url translate="label comment">
                <label>API URL</label>
                <comment><![CDATA[API URL for LianaTech RESTful services]]></comment>
                <frontend_type>text</frontend_type>
                <sort_order>3</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>0</show_in_website>
                <show_in_store>1</show_in_store>
